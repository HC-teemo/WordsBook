<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradualcolor"
    tools:context="com.example.huchuan.wordsbook.MainActivity">

    <fragment
        android:id="@+id/id_fragment_title"
        android:name="com.example.huchuan.wordsbook.TitleFragment"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        tools:layout="@layout/fragment_title" />

    <fragment
        android:id='@+id/id_fragment_logo'
        android:name="com.example.huchuan.wordsbook.LogoFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        tools:layout="@layout/fragment_logo" />

    <fragment
        android:id='@+id/id_fragment_search'
        android:name="com.example.huchuan.wordsbook.SearchFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/id_fragment_content"
        android:name="com.example.huchuan.wordsbook.ContentFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        tools:layout="@layout/fragment_content" />
</LinearLayout>
